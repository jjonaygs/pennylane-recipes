<%= turbo_stream.append "recipes" do %>
  <%= render partial: "recipes/recipe", collection: @recipes %>
<% end %>

<% if @recipes.next_page %>
  <%= turbo_stream.replace "load_more" do %>
    <%= render partial: "recipes/load_more" %>
  <% end %>
<% else %>
  <%= turbo_stream.remove "load_more" %>
<% end %>

<%= turbo_stream.update "current_page", @recipes.current_page %>
