<div class="sidebar">
    <h2>Filters</h2>
    <ul>
        <li><a href="#">Categories</a></li>
    </ul>
</div>

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h2">Recepies</h1>
    </div>

    <div id="recipes">
        <%= turbo_frame_tag "recipes", src: recipes_path(format: :turbo_stream), loading: :lazy %>
    </div>

    <% if @recipes.next_page %>
    <%= turbo_frame_tag "load_more", src: recipes_path(page: @recipes.next_page, format: :turbo_stream), loading: :lazy %>
    <% end %>

    <div class="fixed-bottom">
        <p>Current page: <span id="current_page"><%= @recipes.current_page %></span></p>
    </div>
</div>